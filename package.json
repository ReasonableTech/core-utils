{
  "name": "@reasonabletech/core-utils",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "docs:validate": "node ./scripts/docs/validate-usage-guides.mjs",
    "verify": "turbo run typecheck lint test build --continue",
    "setup": "pnpm bootstrap",
    "bootstrap": "node ./scripts/bootstrap/cold-start.mjs",
    "setup:verify": "pnpm verify && pnpm verify:release",
    "bootstrap:doctor": "node ./scripts/bootstrap/cold-start.mjs --doctor",
    "verify:release": "turbo run verify:release",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "git config core.hooksPath .githooks"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@clack/prompts": "1.0.1",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "conventional-commits-parser": "6.2.1",
    "eslint": "10.0.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.11",
    "vercel": "50.23.2"
  },
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*.{ts,tsx,mjs}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,md,json,mjs}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "tar@7.5.7": "7.5.9"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint-plugin-import>eslint": "10",
        "eslint-plugin-jsx-a11y>eslint": "10",
        "eslint-plugin-react>eslint": "10",
        "eslint-plugin-react-hooks>eslint": "10"
      }
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
