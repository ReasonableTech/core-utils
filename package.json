{
  "name": "@reasonabletech/core-utils",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "docs:validate": "node ./scripts/docs/validate-usage-guides.mjs",
    "quality": "turbo run lint typecheck build --continue",
    "setup": "pnpm bootstrap",
    "bootstrap": "node ./scripts/bootstrap/cold-start.mjs",
    "setup:verify": "pnpm turbo run typecheck lint build test --continue && pnpm verify:release",
    "bootstrap:doctor": "node ./scripts/bootstrap/cold-start.mjs --doctor",
    "verify:release": "pnpm turbo run verify:release --filter=@reasonabletech/config-typescript --filter=@reasonabletech/config-tsup",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "git config core.hooksPath .githooks"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@clack/prompts": "1.0.1",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "conventional-commits-parser": "6.2.1",
    "prettier": "^3.8.1",
    "turbo": "^2.8.10"
  },
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
