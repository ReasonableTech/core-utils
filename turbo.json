{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsup.config.ts"],
      "outputs": ["dist/**"]
    },
    "test": {
      "outputs": []
    },
    "test:coverage": {
      "outputs": ["generated/test-coverage/**"]
    },
    "lint": {
      "dependsOn": ["@reasonabletech/eslint-config#build"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "verify:release": {
      "outputs": []
    }
  }
}
